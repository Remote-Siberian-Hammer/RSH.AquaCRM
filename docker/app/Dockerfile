FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

ARG DEBUG
ARG APP_SECRET_KEY
ARG APP_HOSTS
ARG POSTGRES_PORT
ARG POSTGRES_HOST
ARG POSTGRES_DATABASE
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_ENGINE
ARG RABBITMQ_PORT_CLIENT
ARG RABBITMQ_PORT
ARG RABBITMQ_USER
ARG RABBITMQ_PASSWORD
ARG RABBITMQ_VHOST

WORKDIR /var/www/app
EXPOSE 5000

RUN pip install --upgrade pip
COPY requirements.txt .
RUN pip install -r requirements.txt

COPY . .
